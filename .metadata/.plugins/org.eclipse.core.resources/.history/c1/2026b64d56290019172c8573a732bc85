package com.cap.productvalidation.testsstepmanagement.assertstepmanagement.logic.base.usecase;

import com.cap.productvalidation.testsstepmanagement.general.logic.base.AbstractUc;
import com.cap.productvalidation.testsstepmanagement.assertstepmanagement.dataaccess.api.repo.AssertstepRepository;

import javax.inject.Inject;

/**
 * Abstract use case for Assertsteps, which provides access to the commonly necessary data access objects.
 */
public class AbstractAssertstepUc extends AbstractUc {

	  /** @see #getAssertstepRepository() */
	  @Inject
    private AssertstepRepository assertstepRepository;

    /**
     * Returns the field 'assertstepRepository'.
     * @return the {@link AssertstepRepository} instance.
     */
    public AssertstepRepository getAssertstepRepository() {

      return this.assertstepRepository;
    }

}
