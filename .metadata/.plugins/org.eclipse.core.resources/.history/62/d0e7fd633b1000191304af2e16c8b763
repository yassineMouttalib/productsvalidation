

create TABLE ProductValidation (
  id BIGINT NOT NULL AUTO_INCREMENT,
  modificationCounter INTEGER NOT NULL,
  name VARCHAR(255),
  version VARCHAR(255),
  CONSTRAINT PK_ProductValidation PRIMARY KEY(id)
);



create TABLE Testscases (
  id BIGINT NOT NULL AUTO_INCREMENT,
  modificationCounter INTEGER NOT NULL,
  name VARCHAR(255),
  description VARCHAR(255),
  ProductValidationID BIGINT,
  CONSTRAINT PK_Testscases PRIMARY KEY(id),
  CONSTRAINT FK_Testscases_ProductValidation FOREIGN KEY(ProductValidationID) REFERENCES ProductValidation(id)
);

insert into ProductValidation (id,modificationCounter, name,version) 
values (1, 2, 'ProductValidation1', '0.0.1');
insert into Testscases (id, modificationCounter, name,description, ProductValidationID) 
values (1,2, 'testcase1', 'description du premier test',1);




CREATE SEQUENCE HIBERNATE_SEQUENCE START WITH 1000000;

-- *** BinaryObject (BLOBs) ***
CREATE TABLE BINARYOBJECT (
  id BIGINT NOT NULL,
  modificationCounter INTEGER NOT NULL,
  data BLOB(2147483647),
  size BIGINT NOT NULL,
  mimetype VARCHAR(255),
  PRIMARY KEY (ID)
);

-- *** RevInfo (Commit log for envers audit trail) ***
CREATE TABLE REVINFO(
    id BIGINT NOT NULL generated by default as identity (start with 1),
    timestamp BIGINT NOT NULL,
    user VARCHAR(255)
);

